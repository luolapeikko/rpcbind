{
    "name": "@luolapeikko/rpcbind",
    "version": "0.0.1",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "tsdown src/index.ts --sourcemap --format cjs,esm --dts --clean",
        "watch": "tsdown src/index.ts --sourcemap --format cjs,esm --dts --watch",
        "preinstall": "npx only-allow pnpm",
        "test": "vitest run --typecheck --coverage",
        "lint": "biome check"
    },
    "mocha": {
        "exit": true,
        "extension": [
            "ts",
            "js"
        ],
        "recursive": true,
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "reporters": [
            "spec",
            "mocha-junit-reporter"
        ]
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "src"
        ],
        "reporter": [
            "text",
            "lcovonly",
            "cobertura"
        ],
        "all": true,
        "require": [
            "ts-node/register"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@biomejs/biome": "2.3.8",
        "@types/node": "^25.0.0",
        "tsdown": "^0.17.2",
        "typescript": "^5.9.3",
        "vitest": "^4.0.15"
    },
    "packageManager": "pnpm@9.0.6"
}
